{
  "name": "app-ninja-kit",
  "version": "1.0.0",
  "description": "App Ninja Kit: A frameless, powerful and flexible open-source template built with Electron, Vite, React, Redux, TypeScript, Tailwind, and secure local storage. Perfect for building fast, modern, and secure cross-platform apps with localization support.",
  "main": "./out/main/index.js",
  "author": "and-ca",
  "private": true,
  "scripts": {
    "genareteKeys": "node ./genarateRandomKey.mjs",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "npm run genareteKeys -- prod && electron-vite preview",
    "dev": "npm run genareteKeys -- dev && electron-vite dev",
    "build": "npm run genareteKeys -- build && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run genareteKeys -- build && electron-vite build && electron-builder --mac",
    "build:linux": "npm run genareteKeys -- build && electron-vite build && electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/and-ca/app-ninja-kit"
  },
  "bugs": {
    "url": "https://github.com/and-ca/app-ninja-kit/issues"
  },
  "homepage": "https://github.com/and-ca/app-ninja-kit#readme",
  "keywords": [
    "electron",
    "template",
    "typscript",
    "javascript",
    "react",
    "redux",
    "vite"
  ],
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@reduxjs/toolkit": "^2.2.7",
    "@tailwindcss/line-clamp": "^0.4.4",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "electron-updater": "^6.1.7",
    "postcss": "^8.4.40",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.52.1",
    "react-markdown": "^9.0.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.25.1",
    "tailwindcss": "^3.4.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-react-devtools": "^0.5.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-refresh": "^0.4.9",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
